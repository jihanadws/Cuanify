{
  "rewrites": [
    { "source": "/((?!.*\\.(?:css|js|json|ico|png|jpg|svg|webmanifest|txt|woff2?)$).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "text/css"
        }
      ]
    }
  ]
}
